generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model moviesRtve {
  id           Int          @id @default(autoincrement())
  categoryName String
  categoryId   Int
  movieName    String
  imdbId       String?
  movieId      Int          @unique
  moviesTmdb   moviesTmdb[]
}

model moviesTmdb {
  id          Int        @id @default(autoincrement())
  rtve        moviesRtve @relation(fields: [rtveId], references: [movieId])
  rtveId      Int
  tmdbId      Int
  title       String
  overview    String
  popularity  Float
  releaseDate String
  generes     String?
  movieUrl    String?
  runtime     Int?
}

model questions {
  id         Int    @id @default(autoincrement())
  title      String
  optionName String
  options    String
}
